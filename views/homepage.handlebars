<main>
  <div class="container-fluid">
    <div class="row mt-2 p-3 justify-content-center me-3">
      <h2
        class="welcome container-fluid justify-content-center m-1 text-center fw-bold"
      >Welcome to the Ultimate Tech Blog!</h2>
    </div>
    <div id="blog col-" class="container-fluid d-block">
      <div class="row-cols-md-1 px-5 flex-direction:row text-center">
        {{#each blogs as |blog|}}

          <div class="row mb-4">
            <div class="card p-3 rounded-4 shadow-lg mx-2">
              <header
                class="header bg-dark text-center justify-content-center m-0 p-1"
              >
                <h2 class="h2 ms-1 row">
                  <div class="col-md-9 mt-2 mb-0 pb-0">

                    <!-- Call helper function with triple brackets to render the emoji span as HTML -->
                    {{{get_emoji}}}
                    <a href="/post/{{blog.id}}">{{blog.title}}</a>
                  </div>
                </h2>
              </header>
              <div class="card-body bg-white py-0 shadow-lg">
                <div
                  class="card-text mt-3 pe-2 lh-sm text-center fs-responsive"
                >
                  <p>Created by:
                    {{user.username}}
                    on
                    {{format_date date_created}}</p>
                </div>
                <div class="col-md-12 fw-bold">
                  <p>
                    {{description}}
                  </p>
                </div>
              </div>
            </div>
          </div>

        {{/each}}
      </div>
    </div>
  </div>
</main>