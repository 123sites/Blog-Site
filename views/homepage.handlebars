<!-- Loop over each object in the blogs array -->
<div class="row">
  <div class="col-auto">
    <h2>Welcome to The Ultimate Tech Blog!</h2>
  </div>
</div>
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>

    <p>Created by {{user.username}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
    </p>
  </div>
</div>
{{/each}}




