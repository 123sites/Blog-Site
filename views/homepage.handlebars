<main>
  <div class="container-fluid">
    <div class="row mt-4 p-5 justify-content-center welcome m-5 me-3">

      <h2>Welcome to The Ultimate Tech Blog!</h2>
    </div>

    <div id="blog" class="container container-fluid">
      <div class="row row-cols-1 row-cols-md-3">
        {{#each blogs as |blog|}}
        <div class="col mb-4">
          <div class="card p-3 rounded-4 shadow-lg mx-2">
            <header class="card-header bg-secondary text-white">
              <h2 class="h2 mb-1 ms-1 row mb-4 blog">
                {{!-- <div class="col-md-5"> }} --}}

                  <!-- Call helper function with triple brackets to render the emoji span as HTML -->
                  {{{get_emoji}}}
                  <a href="/blog/{{blog.id}}">{{blog.name}}</a>
              </h2>
            </header>
            <div class="card-body bg-white py-0">
              <div class="card-text mt-3 text-md-end pe-2 lh-sm fs-responsive">
                <p>Created by
                  {{user.username}}
                  on
                  {{format_date date_created}}</p>
              </div>
              <div class="col-md-7">
                <p>
                  {{description}}
                </p>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</main>



