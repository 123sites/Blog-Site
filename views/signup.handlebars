<main class='container container-fluid mt-5'>
  <div class='card signup m-3 rounded-3'>
    <header class='card-header'>
      <div class='row'>
        <h2 class='h2 col-12 fw-bold justify-content-center'>
          Sign-Up
        </h2>
      </div>
    </header>
    <div class='card-body'>
      <div class='row align-center p-1'>
        <form class='form signup-form'>
          <div class='form-group m-2'>
            <label for='username-signup'>Username:</label>
            <input
              class='form-control shadow-lg'
              type='text'
              id='username-signup'
              placeholder='Enter username'
            />
          </div>

          <div class='form-group m-2'>
            <label for='password-signup'>Password:</label>
            <input
              class='form-control shadow-lg'
              type='password'
              id='password-signup'
              placeholder='Password'
            />
          </div>

          <div class='row justify-content-center align-items-center'>
            <div class='form-group col-2 my-3 text-center'>
              <button
                class='btn button custom-btn fw-bold text-white'
                type='submit'
              >Sign-up</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

<script type="text/javascript" src='./js/signup.js'></script>


