<div class="row">
  <div class="col-3 pt-3">
    <h2 class="welcome">Welcome, {{user.username}}!</h2>
  </div>
</div>

<main class="container container-fluid mt-5">
  <div id="blog">
    {{! Shows all blog posts from the database & puts it onto the main page. }}
    {{#each user.blogs as |blog|}}
      <div class="card bg-secondary bg-subtle m-3 rounded-3 text-dark fw-bold">
        <div class="card-body">
          <div class="row align-center">
            <div class="h3 col-5 text-start"><a
                class="text-white"
                href="/api/dashboard/{{user_id}}/edit-post/{{id}}"
              >{{blog.title}}</a>
              <p class="fs-5 fw-bold">{{blog.description}}</p>
            </div>
            <div class="col-7 text-end">Posted on
              {{format_date date_created}}</div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div id="add-post-container">
    <form class="form post-form">
      <div class="input-group mb-3">
        <span class="input-group-text">Title</span>
        <input
          id="post-title"
          type="text"
          class="form-control"
          placeholder="Type your title here"
          aria-label="Title"
        />
      </div>
      <div class="input-group">
        <div class="input-group">
          <span class="input-group-text">Description</span>
          <textarea
            id="post-description"
            class="form-control"
            aria-label="With textarea"
          ></textarea>
        </div>
      </div>
      <div class="row justify-content-center align-items-center">
        <div class="form-group col-2 my-3 text-center">
          <button
            class=".add-comment btn button custom-btn"
            type="submit"
            id="add-post"
          >Submit</button>
        </div>
      </div>
    </form>
  </div>

</main>
<script src="/js/dashboard.js"></script>