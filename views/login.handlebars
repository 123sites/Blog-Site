{{! This is the login field for existing users }}
<div class="row my-5 justify-content-center">
  <div class="col-md-5">
    <div class="card my-3">
      <div class="card-body">
        <h3 class="row justify-content-center">Existing User Login:</h3>
        <form class="login-form">
          <div class="mb-3">
            <label for="email-login">Email:</label>
            <input class="form-control" type="email" id="email-login" />
          </div>
          <div class="mb-3">
            <label for="password-login">Password:</label>
            <input class="form-control" type="password" id="password-login" />
          </div>
          <div id="row my-5 justify-content-lg-center">
            <div class="userPrompt mb-3">
              <button
                class="btn bg-success p-2 text-white bg-opacity-75"
                type="submit"
              >Login</button>
              <a
                class="btn bg-success p-2 text-white bg-opacity-75"
                href="/signup"
                role="button"
              >Not a Member? Click to Sign-up!</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<script src='/js/login.js'></script>