<header class="constainer text-center">
  <div class="row bg-info text-white">
    <h1
      class="h1 --bs-body-color col-4 p-2 mx-5 mb-4 bg-info-subtle text-dark rounded-3 header"
    >The Ultimate Tech Blog
    </h1>
  </div>
</header>

{{! This is the login field for existing users }}
<div class="row my-5 justify-content-center">
  <div class="col-md-5">
    <div class="card my-3">
      <div class="card-body">
        <h3 class="row justify-content-center">Login:</h3>
        <form class="login-form">
          <div class="mb-3">
            <label for="email-login">Username:</label>
            <input
              class="form-control"
              type="text"
              id="username-login"
              aria-describedby="usernameHelp"
            />
          </div>
          <div class="mb-3">
            <label for="password-login">Password:</label>
            <input
              class="form-control"
              type="password"
              id="password-login"
              placeholder="Password"
            />
          </div>
          <div id="row my-5 justify-content-lg-center">
            <div class="userPrompt mb-3">
              <button
                class="btn button bg-info p-2 text-white bg-opacity-75"
                type="submit"
              >Login</button>
              <a
                class="btn button bg-info p-2 text-white bg-opacity-75"
                href="/signup"
              >Not a Member? Click to Sign-up!</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>